# create .dockerignore with recommended content
Set-Content -Path .dockerignore -Encoding UTF8 -Value @'
# python envs & caches
.venv
venv
__pycache__
*.pyc
*.pyo
*.pyd

# git / CI / local files
.git
.github/actions
*.log
*.zip
*.tar.gz
*.sqlite3

# data / notebooks / local artifacts (exclude large datasets)
data/
datasets/
notebooks/
*.ipynb

# editor/IDE
.vscode
.idea

# node / build artifacts (if present)
node_modules
dist
build

# optionally exclude model if it's large; remove the line if you want model baked in:
shipment_delay_model_no_leakage.joblib
'@
